{% if download.progress != 100 %}
<div hx-get="{{ url_for('progress', request_id=download.id) }}" hx-trigger="every 600ms" hx-target="this"
    hx-swap="outerHTML">
    {% endif %}
    <div class="progress" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="{{ download.progress }}"
        aria-labelledby="pblabel">
        <div id="pb" class="progress-bar" style="width:{{ download.progress }}%"></div>
    </div>
</div>